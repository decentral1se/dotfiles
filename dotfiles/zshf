function x (){
    # extract files without having to remember anything
    if [ -f $1 ] ; then
        case $1 in
            *.tar.bz2)   tar xjf $1;;
            *.tar.gz)    tar xzf $1;;
            *.bz2)       bunzip2 $1;;
            *.rar)       rar x $1;;
            *.gz)        gunzip $1;;
            *.tar)       tar xf $1;;
            *.tbz2)      tar xjf $1;;
            *.tgz)       tar xzf $1;;
            *.zip)       unzip $1;;
            *.Z)         uncompress $1;;
            *.7z)        7z x $1;;
            *.xz)        tar xf $1;;
            *)           echo "'$1' cannot be extracted via extract()" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}

function docker-cleanup(){
    # nuke all docker images and containers
    docker stop $(docker ps -qa) && docker rm -f $(docker ps -qa)
    docker rmi -f $(docker images -qa)
}

function getpr(){
    # pull down a PR locally, accepts one param - the number of the PR
    git fetch upstream pull/$1/head:"pr_$1"
    git checkout "pr_$1"
}

function grh(){
    # interactively rebase, accepts one param - the number of commits
    git rebase -i HEAD~$1
}

function f(){
    # find things fast
    sudo find . -iname "*$1*"
}

function ht(){
  # generate haskell CTAGS
  hasktags --ignore-close-implementation --ctags .
}

function hpr(){
  # push a branch and submit a PR
  git push origin $1
  git pull-request
}
