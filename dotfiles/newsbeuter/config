# notifications
notify-program notify-send
notify-xterm yes
notify-screen yes
notify-always yes

# reloading
auto-reload yes
reload-only-visible-feeds yes
show-read-feeds no
download-retries 4
refresh-on-startup yes
reload-time 20
reload-threads 4

# display
article-sort-order date-asc
feed-sort-order unreadarticlecount-asc
feedlist-format "%S%n %11u %t"
articlelist-format "%D %f %?T?;%-17T; ?%t"
datetime-format %m-%d
text-width 80

# key bindings
bind-key O open-in-browser-and-mark-read
bind-key k up
bind-key k prev
bind-key j down
bind-key j next
bind-key T home
bind-key G end

# feed item ignores
ignore-article "*" "title =~ \"Sponsor\""
ignore-article "*" "title =~ \"Advertisement\""
ignore-mode "display"

# misc
browser firefox
cleanup-on-quit yes
max-items 200
confirm-exit no
goto-next-feed no
